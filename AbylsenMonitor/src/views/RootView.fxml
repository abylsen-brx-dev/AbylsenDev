<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXHamburger?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root stylesheets="@../resources/MainTheme.css"
	type="BorderPane" xmlns="http://javafx.com/javafx/10.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<AnchorPane prefHeight="50.0" styleClass="toast-container2"
			BorderPane.alignment="CENTER">
			<children>
				<VBox alignment="CENTER_RIGHT" prefHeight="212.0"
					prefWidth="224.0" AnchorPane.bottomAnchor="0.0"
					AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="0.0">
					<children>
						<HBox alignment="CENTER_LEFT" prefHeight="200.0"
							prefWidth="212.0">
							<children>
								<JFXHamburger fx:id="hamburger">
									<HBox.margin>
										<Insets bottom="10.0" left="10.0" right="10.0"
											top="10.0" />
									</HBox.margin>
								</JFXHamburger>
								<Label fx:id="title" text="TITLE" textFill="WHITE">
									<padding>
										<Insets bottom="10.0" left="10.0" right="10.0"
											top="10.0" />
									</padding>
									<font>
										<Font name="System Bold" size="18.0" />
									</font>
								</Label>
							</children>
						</HBox>
					</children>
				</VBox>
			</children>
		</AnchorPane>
	</top>
	<center>
		<AnchorPane>
			<children>
				<BorderPane fx:id="mainContainer"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
				<HBox alignment="TOP_CENTER" fillHeight="false" spacing="5.0"
					AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="10.0">
					<children>
						<VBox fx:id="toastContainer" alignment="TOP_CENTER"/>
					</children>
				</HBox>
				<Pane fx:id="drawerHandleContainer"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
					styleClass="drawer-second-container" />
				<VBox fx:id="menu" styleClass="drawer-contairner" />
			</children>
		</AnchorPane>
	</center>
</fx:root>
